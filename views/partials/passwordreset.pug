-var formClass = cssClass | ""
if ajax == true
    - formClass = cssClass + " ajax"
.forgotpassword
    form(action="/user/passwordreset", method="post", class="validate "+formClass)
        input(type="hidden", name="__nexturl", value=nextUrl)
        +textbox("Email Address", "email", "email fullwidth req","", "Email Address")
        .controls
            input.button.primary(type="submit", value="Reset")